<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDialog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay_App_MaterialAlertDialog">
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorSecondary">@color/shrine_pink_100</item>
        <item name="colorSurface">@color/shrine_pink_light</item>
        <item name="colorOnSurface">@color/shrine_pink_900</item>
        <item name="alertDialogStyle">@color/shrine_pink_900</item>
        <item name="materialAlertDialogTitleTextStyle">@color/shrine_pink_900</item>
        <item name="buttonBarPositiveButtonStyle">@color/shrine_pink_900</item>
        <item name="buttonBarNegativeButtonStyle">@color/shrine_pink_900</item>
    </style>



    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
    </style>
    <!--Design button positive-->
    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/shrine_pink_900</item>
        <item name="rippleColor">@color/shrine_pink_900</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/shrine_pink_light</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--    Bo gÃ³c container-->
    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>